---
import Layout from "../layouts/Layout.astro";
import { Icon } from "astro-icon";
---

<Layout>
  <main>
    <header
      class="flex w-full flex-col items-center justify-center bg-gradient-to-r from-[#E9EDFF] to-[#6F8CFF] py-32"
    >
      <h1 class="text-7xl font-extrabold text-[#161a33]">
        Slovensko v grafoch
      </h1>
      <p class="font-regular mt-6 text-2xl text-[#393A43]">
        Lorem ipsum, dolor sit amet consectetur adipisicing elit.
      </p>
      <a
        href=""
        class="mt-6 flex items-center gap-2 rounded-xl bg-[#355DFD] px-14 py-3 text-xl font-bold text-white transition-colors hover:bg-[#214DFF]"
        ><Icon pack="mdi" name="github" class="w-8" /> GitHub</a
      >
    </header>
  </main>
</Layout>
