---
import Layout from "../layouts/Layout.astro";
import { Icon } from "astro-icon";

const kraje = [
  {
    name: "Bratislavsky kraj",
    border: "hover:outline-[#DA121A]/50",
    background: "bg-[#DA121A]",
    image: "bg-[url('../src/assets/images/bratislava.png')]",
  },
  {
    name: "Trenčiansky kraj",
    border: "hover:outline-[#0159A1]/50",
    background: "bg-[#0159A1]",
    image: "bg-[url('../src/assets/images/trencin.png')]",
  },
  {
    name: "Košický kraj",
    border: "hover:outline-[#658DC0]/50",
    background: "bg-[#658DC0]",
    image: "bg-[url('../src/assets/images/koisce.png')]",
  },
  {
    name: "Banskobystrický kraj",
    border: "hover:outline-[#FDDB25]/50",
    background: "bg-[#FDDB25]",
    image: "bg-[url('../src/assets/images/banska.png')]",
  },
  {
    name: "Trnavský kraj",
    border: "hover:outline-[#0066AE]/50",
    background: "bg-[#0066AE]",
    image: "bg-[url('../src/assets/images/trnava.png')]",
  },
  {
    name: "Žilinský kraj",
    border: "hover:outline-[#09963D]/50",
    background: "bg-[#09963D]",
    image: "bg-[url('../src/assets/images/zilina.png')]",
  },
  {
    name: "Prešovský kraj",
    border: "hover:outline-[#CE281B]/50",
    background: "bg-[#CE281B]",
    image: "bg-[url('../src/assets/images/presov.png')]",
  },
];
---

<Layout>
  <main>
    <header
      class="text-uppercase flex w-full flex-col items-center justify-center bg-primaryDotted bg-primaryDottedSize py-16 px-4 md:px-0 md:py-48"
    >
      <h1
        class="text-center text-6xl font-extrabold tracking-wide text-white md:text-7xl"
      >
        Slovensko v grafoch
      </h1>
      <p
        class="mt-4 max-w-3xl text-center text-2xl font-light tracking-wide text-gray-200"
      >
        Všetky dôležité údaje napríklad zamestnanosť, priemerná mzda o Slovensku
        prehľadne a na jendom mieste.
      </p>
      <div class="mt-6 flex flex-col gap-x-6 md:flex-row">
        <a
          href="https://github.com/xHyroM/slovensko-v-grafoch"
          title="Navštíviť GitHub Projektu"
          class="mt-6 flex items-center gap-2 rounded-xl bg-white px-16 py-3 text-xl font-bold tracking-wide text-[#214DFF] outline outline-4 outline-transparent transition-all hover:outline-gray-200/40"
          ><Icon pack="mdi" name="github" class="w-8" />GitHub</a
        >
        <a
          href="https://github.com/xHyroM/slovensko-v-grafoch"
          title="Navštíviť GitHub Projektu"
          class="mt-6 flex items-center gap-2 rounded-xl border-2 border-solid border-white px-16 py-3 text-xl font-bold tracking-wide text-white outline outline-4 outline-transparent transition-all hover:outline-gray-200/40"
          ><Icon pack="mdi" name="twitter" class="w-8" />Twitter</a
        >
      </div>
    </header>
    <section
      class="mt-16 flex flex-col items-center justify-center gap-x-12 md:mt-24 md:flex-row"
    >
      <span
        class="bg-gradient-to-r from-[#214DFF] to-[#355DFD] bg-clip-text text-4xl font-extrabold tracking-wider text-transparent lg:text-7xl"
        >10,000,000 +</span
      >
      <p class="max-w-sm text-center text-3xl md:text-left md:text-4xl">
        Zanalyzovaných dát & a veci a tak.
      </p>
    </section>
    <h2 class="mt-48 text-center text-6xl font-extrabold">Vyberte si kraj</h2>
    <section
      class="container mx-auto mt-24 flex flex-col justify-center gap-y-12 px-5"
    >
      {
        kraje.map((kraj) => (
          <a
            class={`flex w-full items-center justify-center rounded-2xl text-center text-2xl ${kraj.background} ${kraj.image} bg-cover px-32 py-32  font-extrabold uppercase text-white outline outline-4 outline-transparent transition-all duration-200 hover:scale-105 hover:cursor-pointer md:text-5xl ${kraj.border}`}
          >
            {kraj.name}
          </a>
        ))
      }
    </section>

    <div class="mt-64"></div>
  </main>
</Layout>
